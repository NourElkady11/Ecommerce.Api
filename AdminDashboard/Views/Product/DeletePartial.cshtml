@model ProductViewModel
@inject IUnitOfWork unitOfWork
@{
    var Brands = new SelectList(unitOfWork.GetRepository<ProductBrand, int>().GetAllAsync().Result, "Id", "Name");
    var Types = new SelectList(unitOfWork.GetRepository<ProductType, int>().GetAllAsync().Result, "Id", "Name");
}
<div class="form-group">
    <label asp-for="Picture" class="col-form-label "></label>
    <input asp-for="Picture" class="form-control" />
</div>


<div class="form-group">
    <label asp-for="name" class="col-form-label"></label>
    <input asp-for="name" class="form-control" />
    <span asp-validation-for="name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="description" class="col-form-label"></label>
    <input asp-for="description" class="form-control" />
    <span asp-validation-for="description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="price" class="col-form-label"></label>
    <input asp-for="price" class="form-control" type="number" />
    <span asp-validation-for="price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="brandId" class="col-form-label"></label>
    <select class="form-control" asp-for="brandId" asp-items="Brands">
        <option value="@null">-- Select Brand --</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="typeId" class="col-form-label"></label>
    <select class="form-control" asp-for="typeId" asp-items="Types">
        <option value="@null">-- Select Type --</option>
    </select>
</div>